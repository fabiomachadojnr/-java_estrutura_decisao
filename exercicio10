import java.util.Scanner;
public class exercicio10 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner leitor = new Scanner (System.in);
		
		String sexo;
		String Masculino=("Masculino");
		float altura;
		
		System.out.println("Veja qual é o seu peso ideal");
		System.out.println("Digite sua Altura e centímetros:");
		altura=leitor.nextFloat();
		
		System.out.println("Digite seu sexo:");
		sexo=leitor.next();
		
		if (sexo.equalsIgnoreCase(Masculino))
		
		System.out.println("Seu peso ideal eh:"+((72.7*altura/100)-58));
		
		else
			
		System.out.println("Seu peso ideal eh:"+((62.1*altura/100)-44.7));	
	}
}