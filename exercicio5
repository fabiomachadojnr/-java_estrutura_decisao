import java.util.Scanner;
public class exercício5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	
		Scanner leitor = new Scanner (System.in);
			
			float x;
			
			System.out.println("Digite um número e veja se o mesmo eh par ou impar:");
			x = leitor.nextFloat(); 
			
			if (x%2==0) 
		    System.out.println("O numero "+x+" eh par.");
			else
			System.out.println("O numero "+x+" eh ímpar.");			
	}
}